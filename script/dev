#!/usr/bin/env bash
# Development server script for Jekyll site
# Starts Jekyll server with common development flags

set -euo pipefail

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$REPO_ROOT"

echo -e "${BLUE}üöÄ Starting Jekyll development server...${NC}"
echo -e "${GREEN}üìç Local URL: http://localhost:4000${NC}"
echo -e "${BLUE}üí° Press Ctrl+C to stop the server${NC}\n"

# Start Jekyll server with common development flags
bundle exec jekyll serve --livereload --host 0.0.0.0
