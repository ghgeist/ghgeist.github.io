#!/usr/bin/env bash
# Development server script â€” Vite dev server
set -euo pipefail

GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m'

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$REPO_ROOT"

echo -e "${BLUE}Starting Vite development server...${NC}"
echo -e "${GREEN}Local URL: http://localhost:5173${NC}"
echo -e "${BLUE}Press Ctrl+C to stop the server${NC}\n"

npm run dev
