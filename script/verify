#!/usr/bin/env bash
# Verification script for Jekyll site
# Reads .verify.yml and executes verification steps
# Exit codes: 0 = success, 1 = failure

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$REPO_ROOT"

# Check if .verify.yml exists
if [[ ! -f ".verify.yml" ]]; then
    echo -e "${RED}‚ùå Error: .verify.yml not found${NC}"
    exit 1
fi

echo -e "${BLUE}üìã Reading verification configuration from .verify.yml${NC}"

# Extract Bundler version from .verify.yml (simple grep approach)
BUNDLER_VERSION=$(grep -E "^bundler_version:" .verify.yml | sed 's/.*"\(.*\)"/\1/' || echo "2.5.23")

echo -e "${BLUE}üîç Checking Bundler version...${NC}"
if command -v bundle &> /dev/null; then
    CURRENT_BUNDLER=$(bundle --version | awk '{print $3}')
    if [[ "$CURRENT_BUNDLER" != "$BUNDLER_VERSION" ]]; then
        echo -e "${YELLOW}‚ö†Ô∏è  Warning: Bundler version mismatch${NC}"
        echo -e "   Required: ${BUNDLER_VERSION}"
        echo -e "   Current:  ${CURRENT_BUNDLER}"
        echo -e "   ${YELLOW}Consider installing Bundler ${BUNDLER_VERSION}${NC}"
        echo -e "   ${YELLOW}Command: gem install bundler -v ${BUNDLER_VERSION}${NC}"
    else
        echo -e "${GREEN}‚úÖ Bundler ${BUNDLER_VERSION} detected${NC}"
    fi
else
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: Bundler not found${NC}"
    echo -e "   ${YELLOW}Install with: gem install bundler -v ${BUNDLER_VERSION}${NC}"
fi

# Step 1: Install dependencies
echo -e "\n${BLUE}üì¶ Step 1: Installing dependencies...${NC}"
if bundle install --path vendor/bundle; then
    echo -e "${GREEN}‚úÖ Dependencies installed${NC}"
else
    echo -e "${RED}‚ùå Failed to install dependencies${NC}"
    exit 1
fi

# Step 2: Run test suite (if Rakefile exists)
echo -e "\n${BLUE}üß™ Step 2: Running test suite...${NC}"
if [[ -f "Rakefile" ]]; then
    if bundle exec rake test; then
        echo -e "${GREEN}‚úÖ Test suite passed${NC}"
    else
        echo -e "${YELLOW}‚ö†Ô∏è  Test suite failed, trying build-only validation...${NC}"
        if bundle exec rake test:build; then
            echo -e "${GREEN}‚úÖ Build validation passed (HTML validation skipped)${NC}"
        else
            echo -e "${RED}‚ùå Build validation failed${NC}"
            exit 1
        fi
    fi
else
    echo -e "${YELLOW}‚ö†Ô∏è  Rakefile not found, skipping test suite${NC}"
fi

# Step 3: Build verification (always run)
echo -e "\n${BLUE}üî® Step 3: Building Jekyll site...${NC}"
if bundle exec jekyll build --trace; then
    echo -e "${GREEN}‚úÖ Build completed successfully${NC}"
else
    echo -e "${RED}‚ùå Build failed${NC}"
    exit 1
fi

echo -e "\n${GREEN}üéâ All verification steps passed!${NC}"
exit 0
